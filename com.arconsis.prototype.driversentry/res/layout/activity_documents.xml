<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/documentsBackground"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroundcolor"
>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="45dip"
		android:orientation="horizontal"
		android:background="@color/top_background"
		android:gravity="left"
	>

		<ImageButton
	    	android:id="@+id/homeTopDocuments"
	    	android:layout_width="45dip" 
	    	android:layout_height="fill_parent"	
	    	android:src="@drawable/topbarhomebutton"
	    	android:background="@drawable/topbuttonbackground"
	    	android:onClick="onClickTopHome"
	    />
	    <ImageView style="@style/TitleBarSeparator" />

	 	<TextView
			android:text="@string/documents_title"
	    	android:textColor="@color/top_text"
	    	android:textSize="18sp"	    	
	    	android:textStyle="bold"	    	
	 		android:layout_width="0dp"
	 		android:layout_weight="1" 
	 		android:layout_height="fill_parent" 
	 		android:layout_gravity="center" 
	 		android:gravity="center_vertical"
	 		android:paddingLeft="12dip"
	 		android:paddingRight="12dip"
	 		android:singleLine="true"
			android:ellipsize="end"
        />
        
	    <ImageView style="@style/TitleBarSeparator" />
	    <ImageButton
	   	 	android:id="@+id/addTopDocuments"
	    	android:layout_width="45dip" 
	    	android:layout_height="fill_parent"	    	
	    	android:background="@drawable/topbuttonbackground"
	    	android:src="@drawable/topbaraddbutton"
	    	android:onClick="onClickTopAdd"
			/>
	        
	</LinearLayout>
	
	<ListView 
		android:id="@+id/documentsList" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:gravity="center"
		android:divider="@color/divider_color"
		android:dividerHeight="2sp"
		android:cacheColorHint="#00000000"
	/>
</LinearLayout>